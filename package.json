{
  "name": "ethereal-treasure-market",
  "private": true,
  "version": "0.0.0",
  "description": "Ethereal Treasure Market - E-commerce platform with Angel Coins loyalty system",
  "scripts": {
    "dev": "concurrently -k \"npm:dev:server\" \"npm:dev:client\"",
    "dev:client": "cd frontend && npm run dev",
    "dev:server": "cd backend && npm run dev",
    "build": "cd frontend && npm run build",
    "build:dev": "cd frontend && npm run build:dev",
    "lint": "cd frontend && npm run lint",
    "preview": "cd frontend && npm run preview",
    "init:mongo": "cd backend && npm run init:mongo",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
